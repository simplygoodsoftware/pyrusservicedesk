<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PapirusServiceDesk" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/psd_accent</item>
        <item name="colorAccentSecondary">@color/psd_accent_secondary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textSize">@dimen/psd_theme_text_size_default</item>
        <item name="android:textColorPrimary">@color/psd_text_color_primary</item>
        <item name="android:textColorSecondary">@color/psd_text_color_secondary</item>
        <item name="android:textColorPrimaryInverse">@color/psd_text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/psd_text_color_secondary_inverse</item>
        <item name="textAppearanceListItemSecondary">@style/PsdTextAppearanceListItemSecondary</item>
        <item name="android:listDivider">@color/psd_divider_color</item>
        <item name="actionBarStyle">@style/PsdActionBarStyle</item>
        <item name="elevationDefault">@dimen/psd_elevation_default</item>
    </style>

    <style name="PsdTextAppearanceListItemSecondary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="PsdToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/psd_toolbar_title_text_size</item>
    </style>

    <style name="PsdActionBarStyle" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:elevation" tools:targetApi="lollipop">?attr/elevationDefault</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>