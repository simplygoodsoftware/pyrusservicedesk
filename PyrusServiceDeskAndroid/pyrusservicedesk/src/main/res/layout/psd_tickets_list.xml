<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/psd_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <include
        android:id="@+id/toolbar_tickets_list"
        layout="@layout/psd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/psd_toolbar_height"
        android:background="@color/psd_white"
        android:layout_marginEnd="16dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="ikko" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:tabTextAppearance="@style/PsdTabStyle"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabTextColor="#858C93"
        app:tabSelectedTextColor="#3D54F3"
        app:tabIndicatorColor="#3D54F3"
        app:tabIndicatorHeight="2dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_fl"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filter_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#3D54F3"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tickets_list"
        tools:visibility="visible">

        <TextView
            android:id="@+id/filter_context_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Папа Бургер орвлыовм влармишвыщлвт ылвомшвыщшвлтм"
            android:textColor="@color/psd_text_color_primary"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/delete_filter_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/delete_filter_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/ic_close_big"
            app:layout_constraintStart_toEndOf="@+id/filter_context_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_blue_gray_300"
        app:layout_constraintBottom_toBottomOf="@+id/tab_layout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_big"
        android:visibility="visible"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="68dp"
        app:backgroundTint="#3D54F3"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <include
        android:id="@+id/no_connection"
        layout="@layout/psd_no_connection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tickets_list"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/psd_recyclerview_item_height_default"
        android:layout_height="@dimen/psd_recyclerview_item_height_default"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tickets_list" />

</androidx.constraintlayout.widget.ConstraintLayout>