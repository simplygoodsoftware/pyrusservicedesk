<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/psd_offset_small">

    <TextView
        android:id="@+id/rateUsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="9dp"
        android:textColor="#60666C"
        android:textSize="12sp"
        android:layout_marginVertical="7dp"
        tools:text="Пожалуйста, оцените работу оператора"
        app:layout_constraintBottom_toTopOf="@+id/ratingTextRv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ratingTextRv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/smileLl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/smileLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/psd_offset_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/rating1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            app:srcCompat="@drawable/ic_emoji_rating_1" />

        <ImageButton
            android:id="@+id/rating2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            app:srcCompat="@drawable/ic_emoji_rating_2" />

        <ImageButton
            android:id="@+id/rating3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            app:srcCompat="@drawable/ic_emoji_rating_3" />

        <ImageButton
            android:id="@+id/rating4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            app:srcCompat="@drawable/ic_emoji_rating_4" />


        <ImageButton
            android:id="@+id/rating5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="4dp"
            app:srcCompat="@drawable/ic_emoji_rating_5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>